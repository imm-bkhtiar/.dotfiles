configuration {
  filebrowser {
    sorting-method: "fzf";
  }
  display-drun: "Applications";
  display-window: "Windows";
  drun-display-format: "{icon} {name} ";
  font: "GeistMono Nerd Font Regular 11";
  show-icons: true;
  icon-thme: "Adwaita";
}

@theme "/dev/null"

* {
  // bg: #282a2ed9;
  bg: transparent;
  fg: #dddddd;
  border: #4F7E6D;
  disabled: #707880;

  background-color: @bg;
  color: @fg;
  margin: 0;
  spacing: 0;
  padding: 0;
}

window {
  width: 40%;
  border: 1px;
  border-color: @border;
  background-color: #282a2ed9;
  // background-image: url("/home/immbkhtiar/BAKHTIAR/Photos/wallpaper/rofi_background_1.jpg", both);
  // padding: 125 0 0;
}

mainbox {
  background-color: transparent;
}

listview {
  padding: 0 10 10;
  lines: 10;
  // fixed-height: false;
  // dynamic: true ;
}

element {
  padding: 0 ;
  spacing: 2;
}

element selected,
element-icon selected,
element-text selected {
  color: white;
}
element-text{
  color: @disabled;
}

inputbar {
  padding: 10;
  children: [entry];
}

entry {
  placeholder: "Search:";
  placeholder-color: #333333;
}
